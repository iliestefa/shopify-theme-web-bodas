{%- style -%}
  #WbCtaFinal-{{ section.id }} {
    background: linear-gradient(160deg, #f0e0dd 0%, #e8d4cf 100%);
    padding: 120px 64px;
    text-align: center;
  }

  #WbCtaFinal-{{ section.id }} .wb-section-title {
    max-width: 560px;
    margin: 0 auto 32px;
    font-family: var(--font-wb-serif);
    font-size: clamp(36px, 4.5vw, 56px);
    font-weight: 400;
    line-height: 1.05;
    color: var(--color-wb-brown);
  }

  #WbCtaFinal-{{ section.id }} .wb-section-title em {
    font-style: italic;
    color: var(--color-wb-blush-deep);
  }

  #WbCtaFinal-{{ section.id }} .wb-section-label {
    font-size: 10px;
    letter-spacing: 0.5em;
    text-transform: uppercase;
    color: var(--color-wb-blush-deep);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
  }

  #WbCtaFinal-{{ section.id }} .wb-section-label::before {
    display: none;
  }

  #WbCtaFinal-{{ section.id }} .wb-cta-script {
    font-family: var(--font-wb-script);
    font-size: clamp(32px, 4vw, 52px);
    color: var(--color-wb-blush-deep);
    display: block;
    margin-bottom: 16px;
  }

  #WbCtaFinal-{{ section.id }} .wb-cta-desc {
    color: var(--color-wb-brown-mid);
    font-size: 15px;
    max-width: 440px;
    margin: 0 auto 40px;
    line-height: 1.7;
  }

  #WbCtaFinal-{{ section.id }} .wb-cta-button {
    background: var(--color-wb-blush);
    color: white;
    font-size: 11px;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    padding: 18px 48px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
    font-family: var(--font-body);
    display: inline-block;
  }

  #WbCtaFinal-{{ section.id }} .wb-cta-button:hover {
    background: var(--color-wb-blush-deep);
  }

  @media (max-width: 767px) {
    #WbCtaFinal-{{ section.id }} {
      padding: 72px 24px;
    }
  }
{%- endstyle -%}

<div id="WbCtaFinal-{{ section.id }}" class="wb-cta-final">
  <div class="wb-section-label">{{ section.settings.label_text }}</div>

  {%- if section.settings.script_text != blank -%}
    <span class="wb-cta-script">{{ section.settings.script_text }}</span>
  {%- endif -%}

  {%- if section.settings.title != blank -%}
    <h2 class="wb-section-title">{{ section.settings.title }}</h2>
  {%- endif -%}

  {%- if section.settings.description != blank -%}
    <p class="wb-cta-desc">{{ section.settings.description }}</p>
  {%- endif -%}

  {%- if section.settings.cta_text != blank and section.settings.cta_url != blank -%}
    <a href="{{ section.settings.cta_url }}" class="wb-cta-button">
      {{ section.settings.cta_text }}
    </a>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Web Bodas — CTA Final",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "label_text",
      "label": "Section Label",
      "default": "Empieza hoy"
    },
    {
      "type": "inline_richtext",
      "id": "script_text",
      "label": "Script/Decorative Text",
      "default": "Tu gran día merece una gran invitación"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Heading",
      "default": "Elige tu plantilla y <em>enamora</em> a tus invitados"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>En 48 horas tendrás una invitación digital que tus invitados nunca olvidarán.</p>"
    },
    {
      "type": "inline_richtext",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Ver las 3 plantillas"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Web Bodas — CTA Final"
    }
  ]
}
{% endschema %}
